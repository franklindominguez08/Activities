<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wilsonrc.activities.ProfileActivity">

    <RelativeLayout
        android:layout_marginTop="65dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageProfile"
            android:layout_centerHorizontal="true"
            android:src="@drawable/profile"
            android:layout_width="125dp"
            android:layout_height="125dp"/>

        <TextView
            android:id="@+id/textViewName"
            android:textSize="36sp"
            android:layout_below="@id/imageProfile"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wilson Reyes Collado" />


        <TextView
            android:id="@+id/textViewAbout"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textViewName"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="I am a software developer specialized in Android development." />


        <view
            android:id="@+id/upperDivision"
            android:layout_marginTop="30dp"
            android:layout_below="@id/textViewAbout"
            android:background="@color/White"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:weightSum="3"
            android:id="@+id/container"
            android:layout_below="@+id/upperDivision"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="1"
                android:padding="16dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="18sp"
                    android:layout_gravity="center_horizontal"
                    android:text="400"
                    android:textColor="@color/White"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="20sp"
                    android:text="Repositories"
                    android:textColor="@color/White"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:padding="16dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="18sp"
                    android:layout_gravity="center_horizontal"
                    android:text="400"
                    android:textColor="@color/White"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="20sp"
                    android:text="@string/projects"
                    android:textColor="@color/White"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:padding="16dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="18sp"
                    android:layout_gravity="center_horizontal"
                    android:text="400"
                    android:textColor="@color/White"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="20sp"
                    android:text="Stars"
                    android:textColor="@color/White"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </LinearLayout>

        <view
            android:id="@+id/downDivision"
            android:layout_marginTop="30dp"
            android:layout_below="@id/container"
            android:background="#FFF"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>


        <android.support.v7.widget.AppCompatButton
            android:layout_below="@+id/downDivision"
            android:id="@+id/btn_login"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_share_white_24dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:background="@color/colorPrimary"
            android:textColor="#FFF"
            android:padding="12dp"
            android:text="Share Profile"/>

    </RelativeLayout>



</ScrollView>
